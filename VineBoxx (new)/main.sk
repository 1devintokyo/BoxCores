command /makesay [<player>] [<text>]:
	permission: makesay.cmd
	trigger:
		make arg-1 say arg-2
command /makeexecute [<player>] [<text>]:
	permission: makeexecute.cmd
	trigger:
		make arg-1 execute arg-2


